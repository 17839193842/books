.container{
  width:100%;
}
.photo{
  width:100%;
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom:20rpx;
}
.photo-item{
  width:48%;
  height:200rpx;
  padding:20rpx;
  overflow:hidden;
  margin:0 5%;
  border:5rpx solid #eee;
}
.photo-item image{
  width:100%;
}
/* 模态框 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 45%;
  left: 0;
  z-index: 9500;
  margin: -180rpx 70rpx;
}

.modal-content {
  position: fixed;
  top: 20%;
  left: 0;
  z-index: 9500;
  width: 600rpx;
  height: 85%;
  overflow: hidden;
  padding: 20rpx 10rpx 20rpx;
  background: #fff;
  margin: -180rpx 70rpx;
  border-radius: 2rpx;
}
.modal-content camera{
  width:100%;
  margin-top:0rpx;
  margin-bottom:0;
}
.btn{
  width:100%;
  height:70rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top:0;
  overflow:hodden;
}
.btn button{
  padding:15rpx;
  line-height:45rpx;
}

