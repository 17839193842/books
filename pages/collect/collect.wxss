.list_book{
  width:100%;
  display:flex;
  flex-direction: row;
  justify-content: space-around;
   align-items: center;
   border-bottom:1px solid #ddd;
   padding:20rpx;
   font-size:30rpx;
   height:300rpx;
}
.book_img{
  width:30%;
  overflow:hidden;
  height:100%;
}
.book_img image{
   width:100%;
   height:100%;
}
.book_info{
  width:50%;
  display:flex;
  flex-direction: column;
  height:100%;
}
.book_info view{
    text-align: left;
    line-height:55rpx;
    overflow:hidden;
    padding-left:20rpx;
    color:#555;
}
.book_info view text{
  font-weight: bold;
  color:#111;
  margin-right:10rpx;
}
.book_del{
  width:20%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.book_del button{
  padding:10rpx;
}