<view class="container">
 <!-- 用户信息 -->
 <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
   <!-- 我的购物车 -->
   <view class="book_shop">
     <view bindtap="goShopping">
       <image src="../../images/shop.png"></image>
       <text style="flex:1;margin-left:15rpx;">我的购物车</text>  
       <text style="width:100rpx;"> > </text>
      </view>
   </view>
   <!-- 我的收藏 -->
   <view class="book_collect">
    <view bindtap="goCollect">
       <image src="../../images/collect.png"></image>
       <text style="flex:1;margin-left:15rpx;">我的收藏</text>  
       <text style="width:100rpx;">  > </text>
      </view>
   </view>
   <!-- 我的位置 -->
 <view class="book_collect">
    <view bindtap="locationViewTap">
       <image src="../../images/location.png"></image>
       <text style="flex:1;margin-left:15rpx;">位置信息</text>  
       <text style="width:100rpx;">  > </text>
      </view>
   </view>
   <!-- 我的联系方式 -->
   <view class="book_collect">
    <view bindtap="goTel">
       <image src="../../images/tel.png"></image>
       <text style="flex:1;margin-left:15rpx;">联系方式</text>  
       <text style="width:100rpx;">  > </text>
      </view>
   </view>



</view>