  padding:10rpx;
}
.book_shop view,.book_collect view{
  height:100rpx;
  padding-left:10rpx;
  border-bottom:1px solid #eee;
  display:flex;
  justify-content: space-around;
  align-content: center;
}
.book_shop view image,.book_collect view image{
  width:70rpx;
  height:70rpx;
  margin-left:30rpx;
  margin-top:15rpx;
}
.book_shop view text,.book_collect view text{
  color:#666;
}
