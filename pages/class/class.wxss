.tab-box {
  width: 100%;
  height: 80rpx;
  display: flex;
  background: white;
  justify-content: center;
  overflow: hidden;
}

.tab-box text {
  margin-left: 50rpx;
  font-size: 30rpx;
  height: 74rpx;
  line-height: 72rpx;
}

.active {
  border-bottom: 6rpx solid #ffa810;
  border-radius: 4rpx;
}

/* 图书列表 */
.list_book{
  width:100%;
  display:flex;
  flex-direction: row;
  justify-content: space-around;
   align-items: center;
   border-bottom:1px solid #ddd;
   padding:20rpx;
   font-size:30rpx;
   height:300rpx;
}
.book_img{
  width:32%;
  overflow:hidden;
  height:100%;
}
.book_img image{
   width:100%;
   height:100%;
}
.book_info{
  width:68%;
  display:flex;
  flex-direction: column;
  height:100%;
}
.book_info view{
    text-align: left;
    line-height:55rpx;
    overflow:hidden;
    padding-left:20rpx;
    color:#555;
}
.book_info view text{
  font-weight: bold;
  color:#111;
  margin-right:10rpx;
}
.empty{
  text-align: center;
  font-size:40rpx;
}