.container{
  position:relative;
}
.list_book{
  width:100%;
  display:flex;
  flex-direction: row;
  justify-content: space-around;
   align-items: center;
   border-bottom:1px solid #ddd;
   padding:20rpx;
   font-size:30rpx;
   height:300rpx;
}
.book_img{
  width:32%;
  overflow:hidden;
  height:100%;
  padding-left:10rpx;
}
.book_img image{
   width:100%;
   height:100%;
}
.book_info{
  width:68%;
  display:flex;
  flex-direction: column;
  height:100%;
}
.book_info view{
    text-align: left;
    line-height:55rpx;
    overflow:hidden;
    padding-left:20rpx;
    color:#555;
}
.book_info view text{
  font-weight: bold;
  color:#111;
  margin-right:10rpx;
}

.book_content{
  padding:10rpx;
  margin-bottom:100rpx;
}
.book_content h3{
  font-weight:bold;
  display:flex;
  height:60rpx;
  line-height:60rpx;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width:100%;
}
.book_content h3 text{
  width:60%;
}
.book_content h3 button{
  font-size:32rpx;
  padding:10rpx 10rpx;
  height: 60rpx;
  line-height: 50rpx;
}
.book_content view{
  margin-top:15rpx;
  text-indent:40rpx;
  font-size:34rpx;
  color:#444;
}
.book_btn{
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
}
.book_btn button{
  width:100%;
  font-size:40rpx;
}