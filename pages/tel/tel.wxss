.form{
  width:100%;
}
.form-input{
  width:100%;
  display:flex;
  flex-direction: row;
  justify-content: space-around;
  padding:10rpx;
  align-items: center;
  font-size:32rpx;
  height:70rpx;
  margin:30rpx auto;
}
.form-input .label{
  width:24%;
  height:70rpx;
  line-height:70rpx;
  font-size:36rpx;
  color:#333;
  text-align: right;
  padding-right:20rpx;
}
.form-input input{
  border:2rpx solid #ddd;
  width:68%;
  height:70rpx;
  line-height:70rpx;
  border-radius:10rpx;
  margin-right:30rpx;
  padding-left:10rpx;
}
.form-button button{
  padding:0 15rpx;
}
.form-input input[disabled]{
  background:#eee;
}
.form-input .radios{
  width:68%;
  height:70rpx;
  line-height:70rpx;
  border-radius:10rpx;
  margin-right:30rpx;
  padding-left:10rpx;
}